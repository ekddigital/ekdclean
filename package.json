{
    "name": "ekd-clean",
    "version": "1.0.0",
    "description": "A robust cross-platform system optimization tool by EKD Digital",
    "main": "dist/main/src/index.js",
    "scripts": {
        "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
        "dev:main": "tsc -p packages/main --watch",
        "dev:renderer": "cd packages/renderer && vite",
        "build": "npm run build:main && npm run build:renderer",
        "build:main": "tsc -p packages/main",
        "build:renderer": "cd packages/renderer && vite build",
        "start": "electron dist/main/src/index.js",
        "package": "npm run build && electron-builder",
        "package:mac": "npm run build && electron-builder --mac",
        "package:win": "npm run build && electron-builder --win",
        "package:linux": "npm run build && electron-builder --linux",
        "package:all": "npm run build && electron-builder --mac --win --linux",
        "clean": "rm -rf dist",
        "lint": "eslint packages/*/src/**/*.{ts,tsx}",
        "format": "prettier --write \"packages/*/src/**/*.{ts,tsx,js,jsx,json,md}\""
    },
    "dependencies": {
        "@mantine/core": "^7.12.2",
        "@mantine/hooks": "^7.12.2",
        "@mantine/notifications": "^7.12.2",
        "better-sqlite3": "^11.3.0",
        "electron": "^32.0.1",
        "fast-glob": "^3.3.2",
        "framer-motion": "^11.5.4",
        "fs-extra": "^11.2.0",
        "lucide-react": "^0.536.0",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "zustand": "^4.5.5"
    },
    "devDependencies": {
        "@eslint/config-array": "^0.18.0",
        "@eslint/js": "^9.0.0",
        "@types/fs-extra": "^11.0.4",
        "@types/node": "^22.5.0",
        "@types/react": "^18.3.5",
        "@types/react-dom": "^18.3.0",
        "@typescript-eslint/eslint-plugin": "^8.2.0",
        "@typescript-eslint/parser": "^8.2.0",
        "@vitejs/plugin-react": "^4.3.1",
        "concurrently": "^8.2.2",
        "electron-builder": "^25.0.5",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-react": "^7.35.0",
        "eslint-plugin-react-hooks": "^4.6.2",
        "glob": "^11.0.0",
        "prettier": "^3.3.3",
        "rimraf": "^6.0.0",
        "typescript": "^5.6.0",
        "vite": "^5.4.6"
    },
    "engines": {
        "node": ">=22.16.0"
    },
    "author": "EKD Digital",
    "license": "MIT",
    "keywords": [
        "system-optimization",
        "cross-platform",
        "electron",
        "react",
        "typescript",
        "desktop-app",
        "ekd-digital"
    ],
    "build": {
        "appId": "com.ekddigital.ekdclean",
        "productName": "EKD Clean",
        "copyright": "Copyright Â© 2024 EKD Digital",
        "directories": {
            "buildResources": "assets",
            "output": "release"
        },
        "files": [
            "dist/**/*",
            "packages/renderer/dist/**/*",
            "node_modules/**/*",
            "package.json"
        ],
        "mac": {
            "category": "public.app-category.utilities",
            "target": [
                {
                    "target": "dmg",
                    "arch": ["x64", "arm64"]
                },
                {
                    "target": "zip",
                    "arch": ["x64", "arm64"]
                }
            ],
            "icon": "assets/logo.png",
            "darkModeSupport": true,
            "hardenedRuntime": true,
            "gatekeeperAssess": false,
            "entitlements": "build/entitlements.mac.plist",
            "entitlementsInherit": "build/entitlements.mac.plist"
        },
        "win": {
            "target": [
                {
                    "target": "nsis",
                    "arch": ["x64", "ia32"]
                },
                {
                    "target": "portable",
                    "arch": ["x64", "ia32"]
                }
            ],
            "icon": "assets/logo.png",
            "artifactName": "${productName}-${version}-${arch}-Setup.${ext}"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true,
            "shortcutName": "EKD Clean"
        },
        "linux": {
            "target": [
                "AppImage",
                "deb",
                "rpm"
            ],
            "category": "Utility",
            "icon": "assets/logo.png",
            "synopsis": "System optimization tool",
            "description": "A robust cross-platform system optimization tool by EKD Digital"
        },
        "deb": {
            "depends": ["gconf2", "gconf-service", "libnotify4", "libappindicator1", "libxtst6", "libnss3"]
        },
        "rpm": {
            "depends": ["libXScrnSaver"]
        }
    }
}
